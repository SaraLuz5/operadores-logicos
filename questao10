programa {

	funcao inicio()
 	{
		 real velocidade, multa, excesso
		 
        escreva("Digite a velocidade do carro (em Km/h): ")
        leia(velocidade)

       
        se (velocidade > 80){
            
            excesso = velocidade - 80
            multa = excesso * 7
  
            escreva("VocÃª foi multado! Excesso de ", excesso, " Km/h. Multa no valor de R$", multa) }
        
        senao {
            escreva("Velocidade dentro do limite permitido. Sem multa.") }
    }
}
